<!DOCTYPE html>
<html>
  <head>
    <title>e-Streak</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div class="header-logo">
        <%= link_to("e-Streak", "/") %>
      </div>
      <div class="header-menus">
        <ul>
          <% if @current_user %>
            <li>
              <%= link_to("Games", "/games") %>
            </li>
            <li>
              <%= link_to("人気記事", "") %>
            </li>
            <li>
              <%= link_to("新着記事", "/posts") %>
            </li>
            <li>
              <%= link_to("投稿する", "/posts/new") %>
            </li>
            <li>
              <%= link_to("About", "/about") %>
            </li>
            <li>
              <%= link_to("#{@current_user.name}", "/users/#{@current_user.id}") %>
            </li>
            <li>
              <%= link_to("ログアウト", "/logout", {method: "post"}) %>
            </li>
          <% else %>
            <li>
              <%= link_to("Games", "/games") %>
            </li>
            <li>
              <%= link_to("人気記事", "") %>
            </li>
            <li>
              <%= link_to("新着記事", "/posts") %>
            </li>
            <li>
              <%= link_to("新規登録", "/signup") %>
            </li>
            <li>
              <%= link_to("About", "/about") %>
            </li>
            <%= link_to("login") do %>
              <div class="header-btn">ログイン</div>
            <% end %>
          <% end %>
        </ul>
      </div>
      <% if flash[:notice] %>
        <div class="flash">
          <%= flash[:notice] %>
        </div>
      <% end %>
    </header>
    <%= yield %>
  </body>
</html>
