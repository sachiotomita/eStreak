<div class="main-wrapper">
  <div class="user-new-container">
    <h2>確認メール再送信</h2>

    <%= form_for(resource, as: resource_name, url: user_confirmation_path, html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email),class: "email" %>
      </div>

      <div class="actions">
        <%= f.submit "確認メールを再送信する" %>
      </div>
    <% end %>
  </div>
</div>
