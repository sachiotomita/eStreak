<div class="main-wrapper">
  <div class="like-index-container">
    <div class="container">
      <h2>人気記事ランキング</h2>
      <div class="container2">
        <div class="item-list">
          <ul>
            <li>今日</li>
            <li>週間</li>
            <li>月間</li>
          </ul>
        </div>
        <% @posts_rank.each do |post| %>
          <%= link_to("/posts/#{post.id}") do %>
            <div class="post-container">
              <%= image_tag post.user.image.to_s %>
              <div class="post-container2">
                <h3><%= post.title %></h3>
                <span>@<%= post.user.name %></span>
                <div class="post-data">
                  <span class="fas fa-heart"><%= post.likes.count %></span>
                  <span>カテゴリー：<%= post.game.name.gsub("_", " ") %></span>
                  <span>投稿：<%= post.created_at.strftime('%Y/%m/%d %H:%M') %></span>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
